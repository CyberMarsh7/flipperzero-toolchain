#!/bin/sh

# unofficial strict mode
set -eu;

# vars
SCRIPT_PATH="$(dirname -- "$(readlink -f -- "$0")")";
PY_HOME="$(cd "$SCRIPT_PATH/.." && pwd)";
LIB_PYTHON_PATH="$PY_HOME/lib";
LIB_FFI_PATH="$(cd "$SCRIPT_PATH/../../libffi/lib" && pwd)"
LIB_OPENSSL_PATH="$(cd "$SCRIPT_PATH/../../openssl/lib" && pwd)"
PYTHON_CA_CERT_FILE="$LIB_PYTHON_PATH/python3.11/site-packages/certifi/cacert.pem";

# run
SSL_CERT_FILE="$PYTHON_CA_CERT_FILE" REQUESTS_CA_BUNDLE="$PYTHON_CA_CERT_FILE" LD_LIBRARY_PATH="$LIB_OPENSSL_PATH:$LIB_FFI_PATH:$LIB_PYTHON_PATH" PYTHONHOME="$PY_HOME" "$SCRIPT_PATH/python3.11-bin" "$@";
